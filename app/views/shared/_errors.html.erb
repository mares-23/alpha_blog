<% if obj.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <h4 class="alert-heading">Oooops!Something went wrong!</h4>
    <p>The following errors prevented the article from being saved</p>
    <hr>
    <p class="mb-0">Make sure you check this list down.</p>
    <ul>
      <% obj.errors.full_messages.each do |msg|  %>
      <li><%= msg %></li>
      <% end  %>
    </ul>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  </div>
<% end %>
